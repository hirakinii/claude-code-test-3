# ======================================
# 仕様書作成支援アプリ - 環境変数設定
# ======================================
# このファイルをコピーして .env ファイルを作成してください
# cp .env.example .env

# ------------------------------
# Database Configuration
# ------------------------------
DB_NAME=spec_management_db
DB_USER=spec_user
DB_PASSWORD=YOUR_SECURE_PASSWORD_HERE
DB_HOST=localhost
DB_PORT=5432

# Database URL (Prisma用)
# ローカル開発: Docker使用時は db:5432、npm使用時は localhost:5432
# 本番環境: Cloud SQL接続文字列に変更
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ------------------------------
# Backend Configuration
# ------------------------------
NODE_ENV=development
BACKEND_PORT=3001

# JWT Configuration
JWT_SECRET=YOUR_SUPER_SECRET_JWT_KEY_CHANGE_THIS_IN_PRODUCTION
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=YOUR_REFRESH_TOKEN_SECRET_CHANGE_THIS
JWT_REFRESH_EXPIRES_IN=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=YOUR_SESSION_SECRET_CHANGE_THIS
SESSION_MAX_AGE=86400000

# ------------------------------
# Frontend Configuration
# ------------------------------
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:3001
VITE_APP_NAME=仕様書作成支援アプリ
VITE_APP_VERSION=1.0.0

# ------------------------------
# Logging Configuration
# ------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# ------------------------------
# pgAdmin Configuration (開発環境のみ)
# ------------------------------
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ------------------------------
# Google Cloud Configuration (本番環境)
# ------------------------------
# GCP_PROJECT_ID=spec-manager-test
# GCP_REGION=asia-northeast1
# CLOUD_SQL_CONNECTION_NAME=spec-manager-test:asia-northeast1:spec-manager-db-staging
# SECRET_MANAGER_ENABLED=false

# ------------------------------
# Export Configuration
# ------------------------------
EXPORT_PDF_TIMEOUT=30000
EXPORT_DOCX_FONT=Noto Sans JP
EXPORT_TEMP_DIR=/tmp/exports

# ------------------------------
# Security Configuration
# ------------------------------
# HTTPS (本番環境)
# FORCE_HTTPS=false
# HSTS_MAX_AGE=31536000

# Password Hashing
BCRYPT_SALT_ROUNDS=12

# ------------------------------
# Monitoring & Analytics (オプション)
# ------------------------------
# SENTRY_DSN=
# GOOGLE_ANALYTICS_ID=

# ------------------------------
# Feature Flags (開発環境)
# ------------------------------
ENABLE_SWAGGER_DOCS=true
ENABLE_DEBUG_LOGS=true
