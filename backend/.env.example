# ======================================
# Backend API - 環境変数設定
# ======================================
# このファイルをコピーして .env ファイルを作成してください
# cp .env.example .env

# ------------------------------
# Database Configuration
# ------------------------------
# ローカル開発（npm使用時）
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/spec_management_db?schema=public

# Docker使用時は以下をアンコメント
# DATABASE_URL=postgresql://spec_user:spec_password@postgres:5432/spec_management_db?schema=public

# ------------------------------
# Server Configuration
# ------------------------------
NODE_ENV=development
PORT=3001

# ------------------------------
# JWT Configuration
# ------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32
JWT_REFRESH_EXPIRES_IN=30d

# ------------------------------
# Session Configuration
# ------------------------------
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-min-32

# ------------------------------
# CORS Configuration
# ------------------------------
CORS_ORIGIN=http://localhost:3000

# ------------------------------
# Rate Limiting
# ------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ------------------------------
# Security Configuration
# ------------------------------
BCRYPT_SALT_ROUNDS=12

# ------------------------------
# Export Configuration
# ------------------------------
EXPORT_PDF_TIMEOUT=30000
EXPORT_DOCX_FONT=Noto Sans JP
EXPORT_TEMP_DIR=/tmp/exports

# ------------------------------
# Logging Configuration
# ------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# ------------------------------
# Feature Flags (開発環境)
# ------------------------------
ENABLE_SWAGGER_DOCS=true
ENABLE_DEBUG_LOGS=true
