# ======================================
# Backend API - テスト環境変数
# ======================================
# このファイルはテスト実行時に自動的に読み込まれます

# ------------------------------
# Database Configuration (Test)
# ------------------------------
# テスト用データベース
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/spec_management_test?schema=public

# Docker使用時は以下をアンコメント
# DATABASE_URL=postgresql://spec_user:YOUR_SECURE_PASSWORD_HERE@db:5432/spec_management_test?schema=public

# ------------------------------
# Server Configuration
# ------------------------------
NODE_ENV=test
PORT=3001

# ------------------------------
# JWT Configuration (Test)
# ------------------------------
JWT_SECRET=test-jwt-secret-key-for-automated-testing-only-not-for-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_SECRET=test-refresh-secret-key-for-automated-testing-only
JWT_REFRESH_EXPIRES_IN=1d

# ------------------------------
# Session Configuration (Test)
# ------------------------------
SESSION_SECRET=test-session-secret-key-for-automated-testing-only

# ------------------------------
# CORS Configuration
# ------------------------------
CORS_ORIGIN=http://localhost:3000

# ------------------------------
# Rate Limiting (Test - より緩い設定)
# ------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ------------------------------
# Security Configuration
# ------------------------------
BCRYPT_SALT_ROUNDS=4

# ------------------------------
# Export Configuration
# ------------------------------
EXPORT_PDF_TIMEOUT=10000
EXPORT_DOCX_FONT=Noto Sans JP
EXPORT_TEMP_DIR=/tmp/test-exports

# ------------------------------
# Logging Configuration (Test)
# ------------------------------
LOG_LEVEL=error
LOG_FORMAT=json

# ------------------------------
# Feature Flags (Test)
# ------------------------------
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_LOGS=false
